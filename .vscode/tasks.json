{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "command": "${workspaceFolder}/compile.bat",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            }
        },
        {
            "label": "Increment minor",
            "type": "process",
            "command": "python",
            "args": [
                "builder.py",
                "minor"
            ],
            "problemMatcher": [],
            "group": {
              "kind": "build",
              "isDefault": true
            },
            "presentation": {
              "focus": true,
              "reveal": "always"
            },
        },
        {
            "label": "Increment major",
            "type": "process",
            "command": "python",
            "args": [
                "builder.py",
                "major"
            ],
            "problemMatcher": []
        },
        {
            "label": "Update git revision",
            "type": "process",
            "command": "python",
            "args": ["builder.py"],
            "problemMatcher": []
        },
        {
            "label": "Build and increment minor",
            "type": "process",
            "dependsOn": [
                "Increment minor",
                "Compile"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
                },
                "presentation": {
                "focus": true,
                "reveal": "always"
            }
        },
        {
            "label": "Build and increment major",
            "type": "process",
            "dependsOn": [
                "Increment major",
                "Compile"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
                },
                "presentation": {
                "focus": true,
                "reveal": "always"
            }
        }
    ]
}
