{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "command": "${workspaceFolder}/compile.bat",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "focus": true
            }
        },
        {
            "label": "Increment minor",
            "type": "process",
            "command": "${workspaceFolder}/builder.py",
            "args": [
                "minor"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ]
            }
        },
        {
            "label": "Increment major",
            "type": "shell",
            "command": "${workspaceFolder}/builder.py",
            "args": [
                "major"
            ],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ]
            }
        },
        {
            "label": "Update git revision",
            "type": "shell",
            "command": "${workspaceFolder}/builder.py",
            "args": [],
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ]
            }
        },
        {
            "label": "Build and increment minor",
            "type": "shell",
            "dependsOn": [
                "Increment minor",
                "Build"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Build and increment major",
            "type": "shell",
            "dependsOn": [
                "Increment major",
                "Build"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}
