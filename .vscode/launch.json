	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug ReNodes",
			"type": "python",
			"request": "launch",
			// uses main in rootdir
			"program": "./main.py",
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"justMyCode": true,
			//"preLaunchTask": "Update git revision"
		},
		{
			"name": "Debug (no-splash)",
			"type": "python",
			"request": "launch",
			"args": ["-nosplash","-debug"],
			// uses main in rootdir
			"program": "./main.py",
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"justMyCode": true,
		},
		{
			"name": "Debug - Generate lib and run",
			"type": "python",
			"request": "launch",
			"args": ["-nosplash","-debug","-genlib_run"],
			// uses main in rootdir
			"program": "./main.py",
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"justMyCode": true,
		},
		{
			"name": "Generate library",
			"type": "python",
			"request": "launch",
			"args": ["-genlib"],
			// uses main in rootdir
			"program": "./main.py",
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"justMyCode": true,
		},
		{
			"name": "Release",
			"type": "python",
			"request": "launch",
			// uses main in rootdir
			"program": "./main.py",
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"justMyCode": true,
		},
		{
			"name": "Sign library",
			"type": "python",
			"request": "launch",
			"args": ["-sign_lib"],
			// uses main in rootdir
			"program": "./main.py",
			"cwd": "${workspaceFolder}",
			"console": "integratedTerminal",
			"justMyCode": true,
		}
	]
}